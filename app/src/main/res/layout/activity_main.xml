<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Main_Layout_Margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_categories"
            style="@style/StyleNavButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Main_Button_Margin"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/ButtonCategoriesColor"
            android:text="@string/button_categories" />

        <Button
            android:id="@+id/button_favorites"
            style="@style/StyleNavButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="@dimen/Main_Button_Margin"
            android:layout_weight="1"
            android:backgroundTint="@color/ButtonFavoritesColor"
            android:text="@string/button_favorites"
            app:icon="@drawable/ic_heart"
            app:iconGravity="textEnd" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>