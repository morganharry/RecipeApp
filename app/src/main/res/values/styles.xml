<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="styleSeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

    <style name="StyleButtonTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleButtonTitle14</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyleText12" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/portion_color</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.60</item>
    </style>

    <style name="StyleTitle20Black" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
